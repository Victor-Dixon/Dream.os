{
  "name": "agent-messaging",
  "version": "1.0.0",
  "description": "MCP server for agent-to-agent messaging with coordinate management. Allows setting agent coordinates and enables agents to message each other via PyAutoGUI.",
  "protocol": "mcp",
  "command": "python",
  "args": ["mcp_servers/agent_messaging_mcp_server.py"],
  "tools": [
    {
      "name": "set_agent_coordinates",
      "description": "Set or update coordinates for an agent. Required for PyAutoGUI-based messaging.",
      "parameters": {
        "agent_id": {
          "type": "string",
          "description": "Agent identifier (e.g., 'Agent-1', 'Agent-2')",
          "required": true
        },
        "x": {
          "type": "integer",
          "description": "X coordinate for chat input",
          "required": true
        },
        "y": {
          "type": "integer",
          "description": "Y coordinate for chat input",
          "required": true
        },
        "description": {
          "type": "string",
          "description": "Optional agent description"
        },
        "onboarding_x": {
          "type": "integer",
          "description": "Optional X coordinate for onboarding"
        },
        "onboarding_y": {
          "type": "integer",
          "description": "Optional Y coordinate for onboarding"
        },
        "active": {
          "type": "boolean",
          "description": "Whether the agent is active",
          "default": true
        }
      }
    },
    {
      "name": "get_agent_coordinates",
      "description": "Get coordinates for one or all agents",
      "parameters": {
        "agent_id": {
          "type": "string",
          "description": "Optional specific agent ID. If not provided, returns all agents."
        }
      }
    },
    {
      "name": "remove_agent_coordinates",
      "description": "Remove coordinates for an agent",
      "parameters": {
        "agent_id": {
          "type": "string",
          "description": "Agent identifier to remove",
          "required": true
        }
      }
    },
    {
      "name": "send_agent_message",
      "description": "Send a message from one agent to another via PyAutoGUI",
      "parameters": {
        "sender": {
          "type": "string",
          "description": "Sender agent ID (e.g., 'Agent-1', 'CAPTAIN')",
          "required": true
        },
        "recipient": {
          "type": "string",
          "description": "Recipient agent ID (e.g., 'Agent-2')",
          "required": true
        },
        "message": {
          "type": "string",
          "description": "Message content to send",
          "required": true
        },
        "priority": {
          "type": "string",
          "enum": ["regular", "urgent"],
          "description": "Message priority level",
          "default": "regular"
        },
        "message_type": {
          "type": "string",
          "description": "Optional message type override"
        }
      }
    },
    {
      "name": "broadcast_message",
      "description": "Broadcast a message to all configured agents",
      "parameters": {
        "sender": {
          "type": "string",
          "description": "Sender agent ID",
          "required": true
        },
        "message": {
          "type": "string",
          "description": "Message content to broadcast",
          "required": true
        },
        "priority": {
          "type": "string",
          "enum": ["regular", "urgent"],
          "description": "Message priority",
          "default": "regular"
        },
        "exclude_agents": {
          "type": "array",
          "description": "Optional list of agent IDs to exclude"
        }
      }
    },
    {
      "name": "get_message_history",
      "description": "Get message history with optional filters",
      "parameters": {
        "agent_id": {
          "type": "string",
          "description": "Optional agent ID to filter (as sender or recipient)"
        },
        "limit": {
          "type": "integer",
          "description": "Maximum number of messages to return",
          "default": 50
        },
        "sender_filter": {
          "type": "string",
          "description": "Filter by sender"
        },
        "recipient_filter": {
          "type": "string",
          "description": "Filter by recipient"
        }
      }
    },
    {
      "name": "list_agents",
      "description": "List all configured agents with their status",
      "parameters": {}
    },
    {
      "name": "import_coordinates_from_config",
      "description": "Import coordinates from the main config/coordinates.json file",
      "parameters": {}
    }
  ]
}
