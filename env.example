# Agent Cellphone V2 - Environment Configuration
# Copy this file to .env and customize for your environment

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application name and version
APP_NAME="Agent Cellphone V2"
APP_VERSION="2.0.0"

# Debug mode (set to true for development)
DEBUG=false

# ==========================================
# API SETTINGS
# ==========================================

# API server configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1

# ==========================================
# DISCORD INTEGRATION (Optional)
# ==========================================

# Discord bot token (REQUIRED - get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord server channels (auto-created by Discord Manager tool)
DISCORD_INFRASTRUCTURE_CHANNEL_ID=your_infrastructure_channel_id
DISCORD_ARCHITECTURE_CHANNEL_ID=your_architecture_channel_id
DISCORD_COORDINATION_CHANNEL_ID=your_coordination_channel_id
DISCORD_A2A_COORDINATION_CHANNEL_ID=your_a2a_coordination_channel_id

# Agent-specific webhook URLs (auto-created by Discord Manager tool)
DISCORD_AGENT1_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_AGENT2_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_AGENT3_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_AGENT4_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Legacy Discord channel ID (for backward compatibility)
DISCORD_CHANNEL_ID=your_general_channel_id

# Discord webhook URL (general notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# ==========================================
# DATABASE SETTINGS
# ==========================================

# Database connection URL
# SQLite (default): sqlite:///agent_cellphone.db
# PostgreSQL: postgresql://user:password@localhost/agent_cellphone
# MySQL: mysql://user:password@localhost/agent_cellphone
DATABASE_URL=sqlite:///agent_cellphone.db

# ==========================================
# AGENT SETTINGS
# ==========================================

# Maximum number of concurrent agents
MAX_AGENTS=8

# Agent response timeout in seconds
AGENT_TIMEOUT=30

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Secret key for JWT tokens and encryption
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_generate_a_secure_random_key

# Comma-separated list of allowed hosts for production
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# LOGGING SETTINGS
# ==========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# GUI/AUTOMATION SETTINGS
# ==========================================

# Enable GUI automation features
ENABLE_GUI=true

# ==========================================
# DIRECTORY PATHS (Optional overrides)
# ==========================================
# These are auto-detected but can be overridden if needed

# Data directory (relative to project root)
# DATA_DIR=data

# Logs directory (relative to project root)
# LOGS_DIR=logs

# Agent workspaces directory (relative to project root)
# AGENT_WORKSPACES_DIR=agent_workspaces

# Screenshots directory for GUI automation
# SCREENSHOT_DIR=screenshots

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable development features (additional logging, debug endpoints)
# DEV_MODE=false

# ==========================================
# STREAMING & SOCIAL MEDIA INTEGRATIONS
# ==========================================

# Twitch integration settings
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_ACCESS_TOKEN=your_twitch_access_token
TWITCH_REFRESH_TOKEN=your_twitch_refresh_token
TWITCH_ADMIN_USERS=user1,user2,user3

# YouTube API settings
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Twitter/X API settings
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ==========================================
# EXTERNAL SERVICE INTEGRATIONS
# ==========================================

# OpenAI API Key (for AI features)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (alternative AI provider)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Other AI providers
# GROQ_API_KEY=your_groq_api_key
# TOGETHER_API_KEY=your_together_api_key

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Enable metrics collection
# ENABLE_METRICS=true

# Metrics collection endpoint
# METRICS_ENDPOINT=http://localhost:9090/metrics

# ==========================================
# CACHE & SESSION SETTINGS
# ==========================================

# Redis configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Session settings
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600

# ==========================================
# EMAIL & NOTIFICATIONS
# ==========================================

# SMTP configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Email settings
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ==========================================
# FILE STORAGE & UPLOADS
# ==========================================

# AWS S3 configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# Local file storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Sentry error tracking (optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Log aggregation
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5044

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================

# Test database (separate from production)
TEST_DATABASE_URL=sqlite:///test_agent_cellphone.db

# Mock external services in tests
MOCK_EXTERNAL_APIS=true

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Enable automatic backups
# ENABLE_BACKUPS=true

# Backup interval in hours
# BACKUP_INTERVAL=24

# Maximum number of backups to keep
# MAX_BACKUPS=7

# ==========================================
# DEPLOYMENT & PRODUCTION
# ==========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Domain and URLs
BASE_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# SSL/TLS settings
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
FORCE_HTTPS=true

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS settings
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable specific features
ENABLE_DISCORD_BOT=true
ENABLE_TWITCH_INTEGRATION=false
ENABLE_YOUTUBE_INTEGRATION=false
ENABLE_TWITTER_INTEGRATION=false
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_BACKUPS=true

# Beta features (use with caution)
ENABLE_BETA_FEATURES=false

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# Connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REDIS_POOL_SIZE=10

# Caching settings
CACHE_TTL=3600
CACHE_BACKEND=redis

# Compression
ENABLE_GZIP=true
ENABLE_BROTLI=false

# ==========================================
# LEGAL & COMPLIANCE
# ==========================================

# GDPR compliance
ENABLE_GDPR=true
COOKIE_CONSENT=true

# Terms and privacy
TERMS_URL=https://yourdomain.com/terms
PRIVACY_URL=https://yourdomain.com/privacy

# ==========================================
# ADMIN & MAINTENANCE
# ==========================================

# Admin access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password
ADMIN_EMAIL=admin@yourdomain.com

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please check back later."

# Backup storage
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30