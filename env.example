# Environment Configuration - Agent Cellphone V2
# Copy this file to .env and modify as needed

# Logging Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
LOG_FILE=logs/app.log

# Debug Mode Configuration (replaces hardcoded debug flags)
DEBUG_MODE=false
FLASK_DEBUG=false
VERBOSE_LOGGING=false

# Performance Monitoring
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1.0
LOG_MEMORY_USAGE=true
MEMORY_THRESHOLD=100

# Security Logging
LOG_AUTH_ATTEMPTS=true
LOG_API_CALLS=true
LOG_FILE_ACCESS=false
MASK_SENSITIVE_DATA=true

# Integration Logging
LOG_EXTERNAL_APIS=true
LOG_DATABASE_CONNECTIONS=true
LOG_MESSAGE_QUEUE=true
LOG_WEBSOCKET=true

# Development Features
ENABLE_DEVELOPMENT_FEATURES=false
ENABLE_TESTING_MODE=false
ENABLE_PROFILING=false

# File Paths
LOG_DIRECTORY=logs
CONFIG_DIRECTORY=config
DATA_DIRECTORY=data
CACHE_DIRECTORY=cache

# API Configuration
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_RATE_LIMIT=100

# Database Configuration
DB_CONNECTION_TIMEOUT=10
DB_QUERY_TIMEOUT=30
DB_POOL_SIZE=10

# Cursor task database
CURSOR_DB_PATH=

# Web Server Configuration
WEB_HOST=127.0.0.1
WEB_PORT=5000
WEB_WORKERS=4
WEB_TIMEOUT=60

# Secret Keys and Credentials
# Flask secret keys for each environment
FLASK_DEV_SECRET_KEY=
FLASK_TEST_SECRET_KEY=
FLASK_PROD_SECRET_KEY=
# Portal service secrets
PORTAL_SECRET_KEY=
PORTAL_SESSION_SECRET=
PORTAL_REDIS_PASSWORD=
PORTAL_RABBITMQ_USERNAME=
PORTAL_RABBITMQ_PASSWORD=
# Test user credentials
TEST_USER_PASSWORD=
ADMIN_USER_PASSWORD=
# Health monitor web interface secret
HEALTH_MONITOR_SECRET_KEY=
