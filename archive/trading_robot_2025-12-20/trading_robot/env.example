# Trading Robot Environment Variables
# ===================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# ============================================
# ALPACA API CREDENTIALS (Required for Trading)
# ============================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_FEED=iex

# ============================================
# TRADING MODE CONFIGURATION
# ============================================
TRADING_MODE=paper
LIVE_TRADING_ENABLED=false
BROKER=alpaca

# ============================================
# EMAIL CAMPAIGN SMTP CONFIGURATION
# ============================================
# Required for email campaigns (Free → Low → Mid → Premium conversion)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@tradingrobotplug.com
FROM_NAME=Trading Robot Team

# Alternative SMTP providers:
# Gmail: smtp.gmail.com:587
# Outlook: smtp-mail.outlook.com:587
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# AWS SES: email-smtp.us-east-1.amazonaws.com:587

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Development (SQLite - no setup required)
DATABASE_URL=sqlite:///trading_robot.db

# Production (PostgreSQL - requires setup)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_robot

# ============================================
# RISK MANAGEMENT (Conservative Defaults)
# ============================================
MAX_POSITIONS=10
MAX_POSITION_SIZE_PCT=0.1
MAX_PORTFOLIO_RISK_PCT=0.05
DAILY_LOSS_LIMIT_PCT=0.03
MAX_DAILY_TRADES=20
DEFAULT_STOP_LOSS_PCT=0.02
DEFAULT_TAKE_PROFIT_PCT=0.04

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_robot.log

# ============================================
# WEB DASHBOARD
# ============================================
WEB_HOST=0.0.0.0
WEB_PORT=8000
ENABLE_DASHBOARD=true

# ============================================
# EMERGENCY CONFIGURATION
# ============================================
EMERGENCY_STOP_ENABLED=true
EMERGENCY_STOP_LOSS_PCT=0.1
EMERGENCY_SHUTDOWN_TIMEOUT=300

