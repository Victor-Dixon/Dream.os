{
  "dashboard": {
    "title": "Dadudekc.com Portfolio Platform",
    "tags": [
      "portfolio",
      "dadudekc",
      "performance"
    ],
    "timezone": "UTC",
    "panels": [
      {
        "title": "Portfolio Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "http_request_duration_seconds{quantile='0.95', domain='dadudekc.com'}",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "http_request_duration_seconds{quantile='0.5', domain='dadudekc.com'}",
            "legendFormat": "Median"
          }
        ],
        "thresholds": [
          {
            "value": 0.5,
            "color": "green"
          },
          {
            "value": 0.8,
            "color": "orange"
          },
          {
            "value": 1.0,
            "color": "red"
          }
        ]
      },
      {
        "title": "Portfolio Views & Engagement",
        "type": "stat",
        "targets": [
          {
            "expr": "portfolio_views_total{domain='dadudekc.com'}",
            "legendFormat": "Portfolio Views"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "Project Showcase Performance",
        "type": "table",
        "targets": [
          {
            "expr": "portfolio_project_views{domain='dadudekc.com'}",
            "legendFormat": "{{project_name}}"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            }
          ]
        }
      },
      {
        "title": "Contact Form Submissions",
        "type": "stat",
        "targets": [
          {
            "expr": "portfolio_contact_submissions_total{domain='dadudekc.com'}",
            "legendFormat": "Contact Forms"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}